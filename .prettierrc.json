{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": false,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["**/*.ts"],
      "options": {
        "parser": "typescript",
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "semi": false,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.yml", ".github/**/*.yml"],
      "options": {
        "parser": "yaml"
      }
    }
  ]
}
